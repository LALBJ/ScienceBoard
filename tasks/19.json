{
    "type": "ChimeraX",
    "sort": "Raw",
    "steps": 5,
    "instruction": "Toggle a dark blue scale bar of length 10 and thinkness 4 in ChimeraX.",
    "version": "0.5",
    "initialize": [
        {
            "func": "open",
            "name": "102l"
        },
        {
            "func": "turn",
            "axis": "y",
            "angle": 1
        }
    ],
    "evaluate": [
        {
            "type": "states",
            "find": "lambda key, value: key.endswith('drawing._name') and value == 'scalebar'",
            "key": "lambda key: '.'.join(key.split('.')[:-2] + ['scalebar_width'])",
            "value": 10.0
        },
        {
            "type": "states",
            "find": "lambda key, value: key.endswith('drawing._name') and value == 'scalebar'",
            "key": "lambda key: '.'.join(key.split('.')[:-2] + ['scalebar_height'])",
            "value": 4.0
        }
    ]
}
